<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorSecondaryVariant">@color/a1</item>
        <item name="colorPrimary">@color/a3</item>
        <item name="colorSecondary">@color/a2</item>
    </style>

    <style name="Buttons" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/a1</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="splashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>;
    </style>
</resources>